/* === === === === === == DEFAULT - VSCODE PROFILE == === === === === === */
{
  // === === === === === === === === === === === === === === === === === === //
  // Theme Customization
  // === === === === === === === === === === === === === === === === === === //
  // /*
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "entity.name.tag.html",
          "entity.name.tag",
          "entity.other.attribute-name",
          "keyword",
          "storage.modifier",
          "storage.type.class.js",
          "storage.type",
          "support.function.builtin",
          "variable.parameter"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "constant",
          "entity.name.type.class",
          "keyword.codetag.notation",
          "variable.other.property"
        ],
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        "scope": [
          "constant.numeric.css",
          "constant.numeric.decimal.js",
          "constant.numeric",
          "invalid",
          "keyword.mysql",
          "keyword.operator",
          "keyword.other.unit.px.css",
          "keyword.other"
        ],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": [
          "variable.parameter.function.language.special.cls.python",
          "variable.parameter.function.language.special.self.python"
        ],
        "settings": {
          "fontStyle": "",
          "foreground": "#569CD6"
        }
      }
    ]
  },
  // */
  "editor.rulers": [80, 88, 100],
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#6663",
    "statusBar.background": "#1e1e1e",
    "tab.activeBackground": "#113",
    "terminal.selectionBackground": "#a04400"
  },
  // === === === === === === === === === === === === === === === === === === //
  // Basic Configs: Fonts, Editor, Terminal
  // === === === === === === === === === === === === === === === === === === //
  "breadcrumbs.enabled": false,
  "debug.terminal.clearBeforeReusing": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.accessibilitySupport": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Menlo, JetBrains Mono, Consolas, Operator Mono Lig, MonoLisa",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.lineHeight": 1.7,
  "editor.minimap.autohide": true,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.mouseWheelZoom": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "all",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontFamily": "JetBrains Mono, Operator Mono Lig, Menlo",
  "update.mode": "manual",
  "window.commandCenter": false,
  "workbench.iconTheme": "mosmmy-icons-vscode",
  "workbench.layoutControl.enabled": false,
  "workbench.productIconTheme": "material-product-icons",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  // === === === === === === === === === === === === === === === === === === //
  // Language specific settings
  // === === === === === === === === === === === === === === === === === === //
  // Python
  "editor.semanticHighlighting.enabled": true,
  "editor.snippetSuggestions": "inline",
  "files.refactoring.autoSave": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.languageServer": "Pylance",
  "search.useIgnoreFiles": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.ipynb_checkpoints": true
  },
  "flake8.args": [
    "--max-line-length",
    "88",
    "--exclude",
    "__init__.py",
    "--ignore",
    "E501,W503,E203"
  ],
  "isort.args": ["--profile", "black"],
  // Jupyter Notebook
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.themeMatplotlibPlots": true,
  "notebook.cellToolbarVisibility": "hover",
  "notebook.diff.ignoreMetadata": true,
  "notebook.diff.ignoreOutputs": true,
  "notebook.formatOnCellExecution": true,
  "notebook.lineNumbers": "on",
  "notebook.markup.fontSize": 16,
  "notebook.output.fontFamily": "Menlo",
  "notebook.output.fontSize": 15,
  "notebook.output.lineHeight": 1.1,
  "notebook.output.textLineLimit": 50,
  "notebook.output.wordWrap": true,
  "notebook.showCellStatusBar": "visibleAfterExecute",
  "notebook.stickyScroll.enabled": true,
  "notebook.cellToolbarLocation": {
    "default": "left"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // Markdown
  "markdown.validate.enabled": true,
  "markdown.updateLinksOnFileMove.enabled": "always",
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "on"
    }
  },
  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.stickyScroll.enabled": true,
    "editor.wordWrap": "on"
  },
  // YAML
  "[yaml]": {
    "editor.wordWrap": "on"
  },
  // HTML
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  // === === === === === === === === === === === === === === === === === === //
  // Installed Extensions Settings
  // === === === === === === === === === === === === === === === === === === //
  // Spell Checker
  "cSpell.userWords": [],
  "cSpell.ignorePaths": ["*.json", "*.csv", "*.ipynb"],
  "cSpell.minWordLength": 5,
  // Emojisense
  "emojisense.languages": {
    "*": true
  },
  // Project Manager
  "projectManager.git.baseFolders": [],
  // === === === === === === === === === === === === === === === === === === //
  // Themes Collections
  // === === === === === === === === === === === === === === === === === === //
  // "editor.themeCollections": "Darkly Theme - Ayush Lal, nightfall",
  // "editor.fileIconThemes": "mosmmy-icons-vscode",
  // === === === === === === === === === === === === === === === === === === //
  // Recent Settings
  // === === === === === === === === === === === === === === === === === === //
  "workbench.activityBar.visible": false,
  "window.zoomLevel": 1.2
}
