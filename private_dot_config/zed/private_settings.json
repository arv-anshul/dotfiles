{
  "always_treat_brackets_as_autoclosed": true,
  "assistant": {
    "button": false,
    "default_model": {
      "model": "qwen2.5-coder:3b",
      "provider": "ollama"
    },
    "version": "2"
  },
  "auto_update": false,
  "buffer_font_family": "MD IO 0.4",
  "buffer_font_size": 16.0,
  "chat_panel": {
    "button": "when_in_call"
  },
  "collaboration_panel": {
    "button": false
  },
  "experimental.theme_overrides": {
    "editor.wrap_guide": "#FFF2",
    "tab.active_background": "#33A6"
  },
  "extend_comment_on_newline": false,
  "features": {
    "chat": false,
    "copilot": false,
    "notebooks": true
  },
  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.git",
    "**/.venv",
    "**/__pycache__"
  ],
  "font_fallbacks": ["JetBrainsMono Nerd Font"],
  "format_on_save": "on",
  "icon_theme": "Material Icon Theme",
  "indent_guides": {
    "active_line_width": 2,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true
  },
  "journal": {
    "hour_format": "hour24"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  "languages": {
    "CSS": {
      "tab_size": 2
    },
    "JSON": {
      "soft_wrap": "editor_width"
    },
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "Python": {
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "inlay_hints": {
        "enabled": false
      },
      "language_servers": ["basedpyright", "ruff", "!pyright"]
    },
    "YAML": {
      "soft_wrap": "editor_width"
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "typeCheckingMode": "standard"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "multi_cursor_modifier": "cmd_or_ctrl",
  "project_panel": {
    "dock": "right"
  },
  "scrollbar": {
    "show": "always"
  },
  "show_whitespaces": "all",
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_fallbacks": ["JetBrainsMono Nerd Font"],
    "font_size": 14
  },
  "theme": "ARV VSCode",
  "ui_font_family": "Rec Mono Duotone",
  "ui_font_size": 17,
  "wrap_guides": [80, 88, 100, 120]
}
