{
  "disable_ai": true,
  "debugger": {
    "button": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "git_panel": {
    "dock": "right"
  },
  "always_treat_brackets_as_autoclosed": true,
  "agent": {
    "button": false
  },
  "auto_update": false,
  "buffer_font_family": "MD IO",
  "buffer_font_size": 16.0,
  "collaboration_panel": {
    "button": false
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "experimental.theme_overrides": {
    "tab.active_background": "#33A6",
    "editor.background": "#181818",
    "editor.gutter.background": "#181818",
    "terminal.background": "#181818",
    "syntax": {
      "operator": {
        "color": "#C586C0"
      }
    }
  },
  "extend_comment_on_newline": false,
  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.git",
    "**/.venv",
    "**/__pycache__"
  ],
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font"],
  "format_on_save": "on",
  "icon_theme": "Material Icon Theme",
  "indent_guides": {
    "active_line_width": 2,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true
  },
  "journal": {
    "hour_format": "hour24"
  },
  "languages": {
    "CSS": {
      "tab_size": 2
    },
    "JSON": {
      "soft_wrap": "editor_width"
    },
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "Python": {
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "inlay_hints": {
        "enabled": false
      },
      "language_servers": ["basedpyright", "ruff", "!pyright"]
    },
    "YAML": {
      "soft_wrap": "editor_width"
    }
  },
  "lsp": {
    "cspell": {
      "settings": {
        "words": ["pyright", "venv"],
        "language": "en",
        "ignorePaths": [".venv/**", "*.lock", "node_modules/**"],
        "allowCompoundWords": true
      }
    },
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "typeCheckingMode": "standard"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "multi_cursor_modifier": "cmd_or_ctrl",
  "project_panel": {
    "dock": "right"
  },
  "scrollbar": {
    "show": "always"
  },
  "show_whitespaces": "all",
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_fallbacks": ["MD IO 0.4", "JetBrainsMono Nerd Font"],
    "font_size": 14
  },
  "theme": "ARV VSCode - Italic",
  "ui_font_family": "SF Mono Powerline",
  "ui_font_size": 18,
  "wrap_guides": [80, 88, 100, 120]
}
